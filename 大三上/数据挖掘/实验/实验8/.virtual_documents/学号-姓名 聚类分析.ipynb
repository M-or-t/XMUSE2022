#6. ä½¿ç”¨ğ¾-means++åˆå§‹åŒ–è´¨å¿ƒ
def initialize_centers(X, k, seed=50):
    if seed is not None:
        np.random.seed(seed)  # è®¾ç½®éšæœºç§å­ï¼Œä¿è¯éšæœºæ€§ä¸€è‡´
    
    centers = [X[np.random.randint(X.shape[0])]]  # éšæœºé€‰æ‹©ç¬¬ä¸€ä¸ªä¸­å¿ƒ
    while len(centers) < k:
        # è®¡ç®—åˆ°æœ€è¿‘ä¸­å¿ƒçš„å¹³æ–¹è·ç¦»
        dist_sq = np.array([min(np.linalg.norm(x - c)**2 for c in centers) for x in X])
        probs = dist_sq / dist_sq.sum()  # è®¡ç®—æ¦‚ç‡
        cumulative_probs = probs.cumsum()
        r = np.random.rand()
        # æŒ‰ç´¯è®¡æ¦‚ç‡é€‰æ‹©ä¸‹ä¸€ä¸ªä¸­å¿ƒ
        for j, p in enumerate(cumulative_probs):
            if r < p:
                centers.append(X[j])
                break
    return np.vstack(centers)

k = 4  # è®¾å®šä¸­å¿ƒç‚¹æ•°é‡
createCent = initialize_centers(data, k)
print("Created centroids:\n", createCent) 



