def kMeans(dataSet, k, distMeans=distEclid, createCent=randCent):
    m, n = dataSet.shape
    clusterAssment = np.zeros((m, 2))   # ç”¨äºå­˜æ”¾è¯¥æ ·æœ¬å±äºå“ªç°‡åŠåˆ°è´¨å¿ƒè·ç¦»
    centroids = createCent(dataSet, k)  # è´¨å¿ƒåˆå§‹åŒ–

    #è¡¥å……ä½ çš„ä»£ç 
    
    return centroids, clusterAssment

